<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar"/>

    <!--<ScrollView-->
        <!--android:layout_below="@id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true">-->

        <LinearLayout
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <!--Shelter Status-->
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_shelter_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_thumbnail_shelter_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/home_list_shelter_status"
                            android:clickable="true"
                            android:scaleType="fitCenter" />

                        <RelativeLayout
                            android:id="@+id/top_layout_shelter_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/transparent_black_gradient_shape">

                            <TextView
                                android:id="@+id/tv_species_shelter_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="31dp"
                                android:contextClickable="true"
                                android:gravity="left"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="@string/shelter_status"
                                android:textColor="#ffffff"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </FrameLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!--saved form-->
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_saved_forms"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_thumbnail_saved_forms"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/saved_forms"
                            android:clickable="true"
                            android:scaleType="center" />

                        <RelativeLayout
                            android:id="@+id/top_layout_saved_forms"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/transparent_black_gradient_shape">

                            <TextView
                                android:id="@+id/tv_species_saved_forms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="31dp"
                                android:contextClickable="true"
                                android:gravity="left"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="@string/view_saved_forms"
                                android:textColor="#ffffff"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </FrameLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    <!--</ScrollView>-->

    <FrameLayout
        android:id="@+id/updatingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">
                android:layout_centerHorizontal="true"
     android:layout_centerVertical="true"-->

 <RelativeLayout

     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_gravity="center_horizontal|center_vertical"
     android:layout_margin="30dp"
     android:background="@color/white">
        <TextView
            android:id="@+id/textViewUpdatingLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updating Nissa List..."
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="@color/primary_darker">
        </TextView>

        <TextView
            android:layout_below="@id/textViewUpdatingLBL"
            android:layout_marginTop="15dp"
            android:id="@+id/textViewUpdating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerHorizontal="true"
            android:textSize="10dp"
            android:textColor="@color/accent">
        </TextView>

        <ProgressBar
            android:layout_below="@id/textViewUpdating"
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:padding="5dip"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            >
        </ProgressBar>
 </RelativeLayout>

        <!--</RelativeLayout>-->
    </FrameLayout>

</RelativeLayout>