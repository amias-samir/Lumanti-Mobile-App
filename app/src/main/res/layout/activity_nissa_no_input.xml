<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="np.com.naxa.lumanti.activity.NissaNoInputActivity">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!--Nissa no-->
        <TextView
            android:id="@+id/tvNissaLBL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stringG10"
            android:textColor="@color/accent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="text"
                android:textColor="@color/black"
                android:id="@+id/nissa_input_nissa_no" />
        </android.support.design.widget.TextInputLayout>

        <!-- Next -->
        <android.support.v7.widget.CardView
            android:layout_below="@+id/tvNissaLBL"
            android:id="@+id/cv_SaveSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/transparent"
            card_view:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/layout_margin"
                android:padding="5dp">

                <Button
                    android:id="@+id/nissa_input_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/button_pressed_hwc_light"
                    android:text="@string/stringNext"
                    android:textColor="#ffffff" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</RelativeLayout>
